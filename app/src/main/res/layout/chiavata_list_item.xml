<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/personaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawableTint="?android:textColorPrimary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/luogoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:drawableStart="@drawable/baseline_add_location_24"
        android:drawableTint="?android:textColorPrimary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/postoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_apartment_24"
        android:drawableTint="?android:textColorSecondary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/dataTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_calendar_today_24"
        android:drawableTint="?android:textColorSecondary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/usatoProtezioniTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_health_and_safety_24"
        android:drawableTint="?android:textColorSecondary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/votoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/baseline_auto_graph_24"
        android:drawableTint="?android:textColorSecondary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

    <TextView
        android:id="@+id/descrizioneTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:drawableStart="@drawable/baseline_description_24"
        android:drawableTint="?android:textColorSecondary"
        android:drawablePadding="8dp"
        android:gravity="center_vertical" />

</LinearLayout>